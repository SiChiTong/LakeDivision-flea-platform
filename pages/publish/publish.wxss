button{
  position: relative;
  display: inline-block;
  box-sizing: border-box;
  height: 44px;
  margin: 0;
   /*padding: 0; */
   /*font-size: 16px; */
  line-height: 42px;
  text-align: center;
  border-radius: 2px;
  border-width: 0;
  transition: opacity 0.2s;
  color: #07c160;
  padding: 0 15px;
  font-size: 14px;
  background-color: #fff;
  border: none;
}

.btn-area{
  display: flex;
  justify-content: center;
}
.btn-area>view>button:nth-of-type(1){
  margin-right: 5rpx;
}
button::after{
  border: none;
}
.btn-area>view>button:nth-of-type(2){
  color: #07c160;
  opacity: 0.5;
}



#unload{
  /*border: 1px solid black;*/
  padding: 0 8rpx;
}

.unloadBox{
  display: flex;
  flex-wrap: wrap;
}


#unload >.unloadBox .unloadBox-item{
  margin: 0rpx 16rpx 16rpx 0rpx;
  transition: all 1s;
  position: relative;
}

#unload >.unloadBox .unloadBox-item>image{
  width: 160rpx;
  height: 160rpx;
  /*border: 1px solid black;*/
}

#unload >.unloadBox .unloadBox-item>.close{
  position: absolute;
  top: -8px;
  right: -8px;
  color: #969799;
  font-size: 18px;
  background-color: #fff;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.9;
  z-index: 999;
}


#unload >.unloadBox .unloadBox-item>.close>.iconfont{
  color: #999;
}

.addimage{
  width: 160rpx;
  height: 160rpx;
  border: 1px solid black;
